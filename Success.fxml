<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="484.0" prefWidth="400.0" style="-fx-background-color: #ffffff;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.MainViewController">

    <VBox alignment="CENTER" spacing="10">
        <Label text="Share Your Success Story" textFill="#03989e">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>

        <VBox spacing="5">
            <Label text="Content:" textFill="#08939e">
                <font>
                    <Font size="14.0" />
                </font>
            </Label>
            <TextArea fx:id="contentTextArea" prefHeight="100.0" prefWidth="400.0" promptText="Enter your success story content here..." style="-fx-border-color: #03989E;" />
        </VBox>

        <VBox spacing="5">
            <Label text="Experience:" textFill="#08939e">
                <font>
                    <Font size="14.0" />
                </font>
            </Label>
            <TextArea fx:id="experienceTextArea" prefHeight="100.0" prefWidth="400.0" promptText="Enter your success story experience here..." style="-fx-border-color: #03989E;" />
        </VBox>

        <VBox spacing="5">
            <Label text="Media (optional):" textFill="#08939e">
                <font>
                    <Font size="14.0" />
                </font>
            </Label>
            <TextArea fx:id="mediaTextArea" prefHeight="50.0" prefWidth="400.0" promptText="Enter media information (e.g., links, images) here..." style="-fx-border-color: #03989E;" />
        </VBox>

        <HBox alignment="CENTER" spacing="10">
            <Button onAction="#shareSuccessStory" style="-fx-background-color: #08939e; -fx-border-color: #000000; -fx-border-radius: 0; -fx-background-radius: 0;" text="Share Success Story" textFill="WHITE">
                <font>
                    <Font name="Cambria Bold" size="15.0" />
                </font>
            </Button>
        </HBox>
    </VBox>
</AnchorPane>
